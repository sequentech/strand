    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'strand'",
            "sourceLanguages": ["rust"],
            "initCommands":["settings set target.disable-aslr false"],
            "cargo": {
                "args": [
                    "test",
                    //"--no-run",
                    "--lib",
                    "--package=strand"
                ],
                "filter": {
                    "name": "strand",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "TRACING_LEVEL": "debug",
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'shuffle'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=shuffle",
                    "--package=strand"
                ],
                "filter": {
                    "name": "shuffle",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug benchmark 'encrypt'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bench=encrypt",
                    "--package=strand"
                ],
                "filter": {
                    "name": "encrypt",
                    "kind": "bench"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}